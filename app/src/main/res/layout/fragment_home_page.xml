<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/frag_homePage_gl_start"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintGuide_percent="0.05"
		android:orientation="vertical"/>

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/frag_homePage_gl_end"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintGuide_percent="0.95"
		android:orientation="vertical"/>

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/frag_homePage_gl_middleVert"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintGuide_percent="0.5"
		android:orientation="vertical"/>

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/frag_homePage_gl_top"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintGuide_percent="0.42"
		android:orientation="horizontal"/>

	<androidx.cardview.widget.CardView
		android:id="@+id/frag_homePage_cv_main"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@id/frag_homePage_gl_start"
		app:layout_constraintEnd_toEndOf="@id/frag_homePage_gl_end"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintHeight_percent="0.25"
		app:cardCornerRadius="8dp"
		android:layout_marginTop="24dp">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/landmark"
			android:scaleType="fitXY" />

		<TextView
			android:id="@+id/frag_homePage_tv_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:text="Şuan da Nerdesin?\nTarat ve Gör!"
			style="@style/BoldHuge"
			android:textAlignment="center"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="16dp"
			android:layout_marginStart="6dp"/>
	</androidx.cardview.widget.CardView>


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="@id/frag_homePage_gl_start"
		app:layout_constraintBottom_toTopOf="@id/frag_homePage_gl_top"
		style="@style/BoldHuge"
		android:layout_marginStart="4dp"
		android:text="Keşfet" />


	<androidx.cardview.widget.CardView
		android:id="@+id/frag_homePage_cv_first"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@id/frag_homePage_gl_start"
		app:layout_constraintEnd_toEndOf="@id/frag_homePage_gl_middleVert"
		app:layout_constraintTop_toBottomOf="@id/frag_homePage_gl_top"
		app:layout_constraintHeight_percent="0.23"
		app:cardCornerRadius="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="24dp">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/london"
			android:scaleType="centerCrop" />

		<TextView
			android:id="@+id/frag_homePage_tv_first"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:text="Londra"
			android:textStyle="bold"
			android:textAlignment="center"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="20dp"
			android:layout_marginStart="6dp"/>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/frag_homePage_cv_second"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@id/frag_homePage_gl_middleVert"
		app:layout_constraintEnd_toEndOf="@id/frag_homePage_gl_end"
		app:layout_constraintTop_toBottomOf="@id/frag_homePage_gl_top"
		app:layout_constraintHeight_percent="0.23"
		app:cardCornerRadius="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="24dp">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/istanbul"
			android:scaleType="centerCrop"/>

		<TextView
			android:id="@+id/frag_homePage_tv_second"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:text="İstanbul"
			android:textStyle="bold"
			android:textAlignment="center"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="20dp"
			android:layout_marginStart="6dp"/>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/frag_homePage_cv_third"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@id/frag_homePage_gl_start"
		app:layout_constraintEnd_toEndOf="@id/frag_homePage_gl_middleVert"
		app:layout_constraintTop_toBottomOf="@id/frag_homePage_cv_first"
		app:layout_constraintHeight_percent="0.23"
		app:cardCornerRadius="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="32dp">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/florence"
			android:scaleType="centerCrop" />

		<TextView
			android:id="@+id/frag_homePage_tv_third"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:text="Floransa"
			android:textStyle="bold"
			android:textAlignment="center"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="20dp"
			android:layout_marginStart="6dp"/>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/frag_homePage_cv_fourth"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@id/frag_homePage_gl_middleVert"
		app:layout_constraintEnd_toEndOf="@id/frag_homePage_gl_end"
		app:layout_constraintTop_toBottomOf="@id/frag_homePage_cv_first"
		app:layout_constraintHeight_percent="0.23"
		app:cardCornerRadius="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="32dp">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/berlin"
			android:scaleType="centerCrop" />

		<TextView
			android:id="@+id/frag_homePage_tv_fourth"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:text="Berlin"
			android:textStyle="bold"
			android:textAlignment="center"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="20dp"
			android:layout_marginStart="6dp"/>
	</androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>